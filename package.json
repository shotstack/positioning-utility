{
  "name": "positioning",
  "version": "1.0.0",
  "description": "Positioning utility for the Shotstack API",
  "main": "index.js",
  "scripts": {
    "start": "npm run tailwind:css && ./node_modules/.bin/http-server",
    "tailwind:css": "postcss styles/tailwind.css -o styles/style.css",
    "build": "npm run tailwind:css && mkdir -p build && mkdir -p build/js && mkdir -p build/styles && cp index.html build/ && cp styles/style.css build/styles/ && cp js/app.js build/js/"
  },
  "author": "Derk Zomer",
  "license": "MIT",
  "dependencies": {
    "http-server": "^13.0.2",
    "tailwindcss": "^2.2.16"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.32.0",
    "@typescript-eslint/parser": "^4.32.0",
    "autoprefixer": "^10.3.6",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-html": "^6.2.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^4.0.0",
    "postcss": "^8.3.8",
    "postcss-cli": "^9.0.1",
    "prettier": "^2.4.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "jquery": true
    },
    "extends": [
      "airbnb-base"
    ],
    "parserOptions": {
      "ecmaVersion": 12
    },
    "plugins": [
      "html"
    ],
    "rules": {
      "no-var": 0,
      "no-undef": 0,
      "max-len": 0,
      "no-console": 0
    }
  },
  "eslintIgnore": [
    "node_modules",
    "build"
  ]
}
